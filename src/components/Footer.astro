---
import Logo from "./Logo.astro";
// REMOVED the broken Icon import
---

<footer
    class="bg-sand/50 dark:bg-dark-bg/50 border-t border-ink/10 dark:border-sand/20"
>
    <div class="max-w-7xl mx-auto px-8 py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            <div class="lg:col-span-2">
                <a href="/" class="mb-4 inline-block">
                    <Logo />
                </a>
                <p class="text-sm text-ink/70 dark:text-sand/70 max-w-xs mb-6">
                    Healing the relationship between tourism and local
                    communities through authentic, community-driven discovery.
                </p>

                <!-- START: Replaced the Icon component with a safe, inline SVG -->
                <div class="flex items-center space-x-4">
                    <a
                        href="https://www.instagram.com/lovethisplace.co/"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="LoveThisPlace on Instagram"
                        class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                    >
                        <svg
                            class="w-6 h-6"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.072-4.948-.072zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4s1.791-4 4-4 4 1.79 4 4-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.441 1.441 1.441 1.441-.645 1.441-1.441-.645-1.44-1.441-1.44z"
                            ></path>
                        </svg>
                    </a>
                </div>
                <!-- END: Fix -->
            </div>

            <div>
                <h4 class="font-bold font-display text-ink dark:text-sand mb-4">
                    Navigate
                </h4>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="/dashboard"
                            class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                        >
                            Member Dashboard
                        </a>
                    </li>
                    <li>
                        <a
                            href="/login"
                            class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                        >
                            Log In
                        </a>
                    </li>
                    <li>
                        <a
                            href="/signup"
                            class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                        >
                            Sign Up
                        </a>
                    </li>
                    <li>
                        <a
                            href="/blog"
                            class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                        >
                            Blog (Coming Soon)
                        </a>
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="font-bold font-display text-ink dark:text-sand mb-4">
                    Company
                </h4>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="/about"
                            class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                        >
                            About Us
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://www.elitecartagena.com"
                            target="_blank"
                            class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                        >
                            Elite Cartagena
                        </a>
                    </li>
                    <li>
                        <a
                            href="/contact"
                            class="text-ink/70 dark:text-sand/70 hover:text-coral transition-colors"
                        >
                            Contact
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="mt-12 pt-8 border-t border-ink/10 dark:border-sand/20 text-center text-sm text-ink/60 dark:text-sand/60"
        >
            <p>
                &copy; {new Date().getFullYear()} LoveThisPlace.co. A Go Elite Global
                Company.
            </p>
        </div>
    </div>
</footer>
