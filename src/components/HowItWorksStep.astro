---
import { Icon } from "astro-icon/components";

export interface Props {
    number: string;
    title: string;
    description: string;
    iconName: string;
}

const { number, title, description, iconName } = Astro.props;
---

<div class="relative flex flex-col items-center text-center">
    <!-- The background number -->
    <div
        class="absolute -top-8 text-8xl font-bold font-display text-sand/50 dark:text-dark-bg/50 z-0"
    >
        {number}
    </div>

    <!-- The icon and text -->
    <div class="relative z-10">
        <div class="flex justify-center items-center mb-4">
            <Icon name={iconName} class="w-12 h-12 text-mint" />
        </div>
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="max-w-xs mx-auto text-ink/70 dark:text-white/70">
            {description}
        </p>
    </div>
</div>
