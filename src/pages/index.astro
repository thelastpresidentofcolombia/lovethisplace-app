---
import "../styles/global.css";
import PersonaCard from "../components/PersonaCard.astro";
import ThemeToggleSimple from "../components/ThemeToggleSimple.astro";
import HowItWorksStep from "../components/HowItWorksStep.astro";
import WaitlistForm from "../components/WaitlistForm.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>LoveThisPlace â€” Share what you love & get paid</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://api.fontshare.com/v2/css?f[]=clash-display@400,500,600,700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<ThemeToggleSimple />
		<main class="relative overflow-hidden">
			<!-- Background Blobs -->
			<div
				class="absolute -top-20 -left-20 w-72 h-72 lg:w-96 lg:h-96 bg-coral/40 dark:bg-coral/30 rounded-full blur-3xl animate-fade-in-up"
				style="animation-delay: 200ms;"
			>
			</div>
			<div
				class="absolute -bottom-20 -right-20 w-72 h-72 lg:w-96 lg:h-96 bg-mint/40 dark:bg-mint/30 rounded-full blur-3xl animate-fade-in-up"
				style="animation-delay: 400ms;"
			>
			</div>

			<!-- HERO SECTION -->
			<section
				class="relative min-h-screen flex flex-col justify-center items-center text-center p-8 z-10"
			>
				<div class="max-w-4xl w-full mx-auto animate-fade-in-up">
					<h1
						class="font-display text-5xl md:text-7xl font-bold leading-tight"
					>
						<span class="text-coral">Love</span> a place?
						<br />
						Turn it into your next <span class="text-mint"
							>paycheck</span
						>.
					</h1>
					<p
						class="mt-6 text-lg md:text-xl max-w-2xl mx-auto text-ink/80 dark:text-sand/80"
					>
						Join the movement for fairer travel. A circular economy
						that rewards local communities, not just giant
						corporations.
					</p>
					<div class="mt-8">
						<WaitlistForm />
					</div>
				</div>
			</section>

			<!-- HOW IT WORKS SECTION -->
			<section class="py-20 px-8 relative z-10">
				<div class="text-center max-w-5xl mx-auto">
					<h2
						class="font-display text-4xl md:text-5xl font-bold mb-16"
					>
						A Simple, Powerful Process
					</h2>
					<div
						class="grid grid-cols-1 md:grid-cols-3 gap-16 md:gap-8"
					>
						<HowItWorksStep
							number="01"
							iconName="ph:qr-code"
							title="Display Your Code"
							description="Owners list their venue and get a unique QR code sticker. Simple, fast, and free."
						/>
						<HowItWorksStep
							number="02"
							iconName="ph:share-network"
							title="Share Your Link"
							description="Referrers scan the code to generate a unique link and share it with travelers."
						/>
						<HowItWorksStep
							number="03"
							iconName="ph:money"
							title="Everyone Wins"
							description="Travelers book direct, saving money. Owners get a sale. Referrers earn a cash commission."
						/>
					</div>
				</div>
			</section>

			<!-- VALUE PROPOSITION SECTION -->
			<section class="py-20 px-8 relative z-10">
				<div class="text-center max-w-5xl mx-auto">
					<h2 class="font-display text-4xl md:text-5xl font-bold">
						A Better Deal for Everyone
					</h2>
					<div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
						<PersonaCard
							iconName="ph:house-line"
							title="For Owners"
							description="Stop paying 15-30% to OTAs. Pay a fair, low commission to a passionate local salesforce that brings you motivated customers."
						/>
						<PersonaCard
							iconName="ph:arrows-clockwise"
							title="For Referrers"
							description="Turn your local knowledge into a real income stream. Earn cash for sharing the places you already know and love. No limits."
						/>
						<PersonaCard
							iconName="ph:airplane-takeoff"
							title="For Travelers"
							description="Get trusted, authentic recommendations from real locals. Save money with fair, direct pricing and know your money supports the community."
						/>
					</div>
				</div>
			</section>

			<!-- SOCIAL MISSION SECTION -->
			<section class="py-20 px-8 relative z-10">
				<div class="text-center max-w-3xl mx-auto">
					<h2 class="font-display text-4xl md:text-5xl font-bold">
						Putting the <span class="text-coral">Community</span> Back
						in Tourism
					</h2>
					<p
						class="mt-6 text-lg md:text-xl text-ink/80 dark:text-sand/80"
					>
						"Tourism resentment" is real. It happens when locals
						feel displaced by an industry that extracts value from
						their home. We're built to fix this. By redirecting
						booking fees back into the hands of local referrers, we
						turn residents into rewarded, active participants in
						their city's success.
					</p>
				</div>
			</section>
		</main>
		<!-- === NEW FOOTER COMPONENT === -->
		<Footer />
	</body>
</html>
