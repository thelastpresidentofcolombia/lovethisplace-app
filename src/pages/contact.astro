---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout title="Contact Us | LoveThisPlace">
    <div class="max-w-2xl mx-auto py-20 px-6 text-center">
        <h1 class="font-display text-4xl md:text-5xl font-bold mb-6">
            Get In Touch
        </h1>
        <p class="text-lg text-ink/80 dark:text-sand/80 mb-8">
            For partnership inquiries, support, or to learn more about our
            mission, please don't hesitate to reach out. We'd love to hear from
            you.
        </p>
        <a
            href="mailto:contact@lovethisplace.co"
            class="text-xl font-bold text-coral hover:underline"
        >
            contact@lovethisplace.co
        </a>
    </div>
</AuthLayout>
